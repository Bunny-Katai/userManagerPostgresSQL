html 
    head 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css")
    body 
        form(id='myForm', method='POST', action='/add')
            div(class="container-fluid")
                div    
                    label(for='firstname', class='fcol-sm-2 col-form-label') First Name 
                    input(id='firstname', class="form-control", name='firstname')
                div 
                    label(for='lastname', class='fcol-sm-2 col-form-label') Last Name
                    input(id='lastname', class="form-control",name='lastname')
                div 
                    label(for='email', class='fcol-sm-2 col-form-label') Email 
                    input(id='email',class="form-control", name='email')
                div 
                    label(for='age', class='fcol-sm-2 col-form-label') Age
                    input(id='age',class="form-control", name='age')
                div(class="d-grid gap-2 col-6 mx-auto") 
                    input(type='submit', value="Add User", class="btn btn-secondary", style='margin-top: 30px')
                div(class="d-grid gap-2 d-md-flex justify-content-md-center")
                    a(href='/' type="button" style='margin-top: 30px') Back to User Listing