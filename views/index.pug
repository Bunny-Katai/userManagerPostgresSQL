html 
    head 
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css")

    body 
        h1(class="d-md-flex justify-content-md-center", style ='margin-top: 30px') User Listing
        div(class="d-flex justify-content-sm-end")
            form(method='GET', action='/users')
                
                input(id='search', name='search',style='height: 40px; width: 250px')
                input(type='submit', value='Search', class="btn btn-secondary", style='margin-left: 20px; margin-right: 10px')
                       
        div(class="container-fluid")
            table(class="table table-bordered")
                thead
                    tr
                        th(scoop="col") User ID
                        th(scoop="col") First Name
                            a(href='/users/ascending' type="button" class="btn btn-light btn-small", style='margin-left: 20px') 
                                i(class="bi bi-sort-alpha-down")
                            a(href='/users/descending' type="button" class="btn btn-light btn-small", style='margin-left: 20px') 
                                i(class="bi bi-sort-alpha-up-alt")  
                        th(scoop="col") Last Name
                        th(scoop="col") Email Address
                        th(scoop="col") Age
                        th(scoop="col") Actions
                tbody
                    each user in users
                        tr
                            td=user.user_id 
                            td=user.first_name
                            td=user.last_name
                            td=user.email
                            td=user.user_age
                            td 
                                a(href=`/users/${user.user_id}` type="button" class="btn btn-light btn-small", style='margin-right: 30px') 
                                    i(class="bi bi-pencil")  Edit
                                a(href=`/delete/${user.user_id}` type="button" class="btn btn-light btn-small") 
                                    i(class="bi bi-trash")  Delete
        div(class="d-grid gap-2 d-md-flex justify-content-md-center")
            a(href='/add', type="button", style='margin-top: 30px', class="btn btn-secondary") Add User       
        div(class="d-grid gap-2 d-md-flex justify-content-md-center")
            a(href='/' type="button" style='margin-top: 30px') Back to User Listing

                